# Google OAuth Configuration
GOOGLE_CLIENT_ID=your_google_client_id_here
GOOGLE_CLIENT_SECRET=your_google_client_secret_here
GOOGLE_REDIRECT_URI=http://localhost:5000/api/gmail/auth/callback

# Firebase Configuration
FIREBASE_API_KEY=your_firebase_api_key_here
FIREBASE_AUTH_DOMAIN=your_project.firebaseapp.com
FIREBASE_PROJECT_ID=your_project_id_here
FIREBASE_STORAGE_BUCKET=your_project.firebasestorage.app
FIREBASE_MESSAGING_SENDER_ID=your_sender_id_here
FIREBASE_APP_ID=your_app_id_here
FIREBASE_MEASUREMENT_ID=your_measurement_id_here

# Firebase Admin SDK
FIREBASE_PROJECT_ID=your_project_id_here
FIREBASE_CLIENT_EMAIL=firebase-adminsdk-xxxxx@your_project.iam.gserviceaccount.com
FIREBASE_PRIVATE_KEY="-----BEGIN PRIVATE KEY-----\nYOUR_PRIVATE_KEY_HERE\n-----END PRIVATE KEY-----\n"

# OpenAI Configuration
OPENAI_API_KEY=sk-your_openai_api_key_here

# Microsoft Outlook OAuth Configuration (Coming Soon)
# OUTLOOK_CLIENT_ID=your_outlook_client_id_here
# OUTLOOK_CLIENT_SECRET=your_outlook_client_secret_here
# OUTLOOK_REDIRECT_URI=http://localhost:5000/oauth/outlook/callback

# Redis Configuration (for local development)
REDIS_HOST=localhost
REDIS_PORT=6379
# REDIS_PASSWORD=your_redis_password_if_needed

# Application Configuration
NODE_ENV=development
PORT=5000

# AI Model Configuration
AI_PROVIDER=groq
USE_LOCAL_MODEL=false
LOCAL_MODEL_URL=http://localhost:11434/v1

# Groq Configuration
GROQ_API_KEY=gsk_your_groq_api_key_here
GROQ_MODEL=llama3-8b-8192

# Token Encryption Key (32 characters for AES-256)
EMAIL_AGENT_TOKEN_KEY=your-32-character-encryption-key-here

# Proxy settings - bypass proxy for Google APIs
NO_PROXY=googleapis.com,*.googleapis.com,accounts.google.com,*.google.com